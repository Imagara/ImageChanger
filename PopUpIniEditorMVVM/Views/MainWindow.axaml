                                </StackPanel>
                            </Border>
                        </Grid>

                        <ListBox Grid.Row="1"
                                 Background="transparent"
                                 Items="{Binding Path=Announcements}"
                                 SelectedItem="{Binding SelectedAnnouncement}">
                            <ListBox.KeyBindings>
                                <KeyBinding Gesture="Delete" Command="{Binding RemoveAnnouncementCommand}"></KeyBinding>
                            </ListBox.KeyBindings>
                            <ListBox.Template>
                                <ControlTemplate>
                                    <ItemsPresenter />
                                </ControlTemplate>
                            </ListBox.Template>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Height="200">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="350" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Border Margin="5,0,5,0"
                                                Background="#ebebe8"
                                                BorderBrush="black"
                                                BorderThickness="1"
                                                CornerRadius="15">
                                            <Image Margin="5"
                                                   Source="{Binding ImagePath, Converter={StaticResource pathToBitmapConverter}}"
                                                   Stretch="Uniform"
                                                   ClipToBounds="True">
                                            </Image>
                                        </Border>
