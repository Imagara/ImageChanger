                            <ListBox Background="transparent"
                                     Items="{Binding Path=Displays}"
                                     SelectedItem="{Binding SelectedDisplay}">
                                <ListBox.KeyBindings>
                                    <KeyBinding Gesture="Delete" Command="{Binding RemoveDisplayCommand}"></KeyBinding>
                                </ListBox.KeyBindings>
                                <ListBox.Template>
                                    <ControlTemplate>
                                        <ItemsPresenter />
                                    </ControlTemplate>
                                </ListBox.Template>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="150" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Border Height="150"
                                                    Margin="5,0,5,0">
                                                <Grid>
                                                    <Image Margin="5"
                                                           Source="../Assets/display-frame.png" />
                                                    <Label Content="{Binding DisplayNum}"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           FontSize="20" />
                                                </Grid>
                                            </Border>
                                            <Border Grid.Column="1"
                                                    BorderBrush="black"
                                                    BorderThickness="1"
                                                    CornerRadius="15"
                                                    Height="200"
                                                    Margin="5,0,5,0"
                                                    Background="#ebebe8">
                                                <StackPanel Margin="10" IsVisible="{Binding IsModeTwo}">
                                                    <Label Content="–î–∏—Ä–µ–∫—Ç–æ—Ä–∏—è" />
                                                    <TextBox Text="{Binding DirectoryPath}" />
