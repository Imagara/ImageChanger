                                    </ComboBox>
                                    <Label Content="{Binding ModeHint}"
                                           Margin="0,3,0,0"
                                           Foreground="darkgray" />
                                </StackPanel>
                                <StackPanel IsVisible="{Binding IsFirstModeStackPanelVisible}">
