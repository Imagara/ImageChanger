                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Margin="0,4,0,0"
                                            Command="{Binding ClearDateCommand}"/>
                                </StackPanel>
                                
                                <TimePicker SelectedTime="{Binding LaunchTimeStr}"/>
                                
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="–£–¥–∞–ª—è—Ç—å –ø–æ—Å–ª–µ –ø–æ–∫–∞–∑–∞?"></Label>
                                    <CheckBox IsChecked="{Binding LaunchAutoDeleteFile}"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="{Binding AnnouncementCountContent}" />
                                    <Button Content="+"
                                            Width="30"
                                            Height="30"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Command="{Binding AddAnnouncementCommand}"
                                            CommandParameter="{Binding ElementName=Window}">
                                        <ToolTip.Tip>
                                            <TextBlock>–î–æ–±–∞–≤–ª–µ–Ω–∏–µ –æ–±—ä—è–≤–ª–µ–Ω–∏—è</TextBlock>
                                        </ToolTip.Tip>
                                    </Button>
                                    <Button Content="‚å´"
                                            Width="40" Height="30"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Command="{Binding RemoveAnnouncementCommand}">
                                        <ToolTip.Tip>
                                            <TextBlock>–£–¥–∞–ª—è–µ—Ç –≤—ã–±—Ä–∞–Ω–Ω–æ–µ –æ–±—å—è–≤–ª–µ–Ω–∏–µ –∏–∑ —Å–ø–∏—Å–∫–∞</TextBlock>
                                        </ToolTip.Tip>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <ListBox Grid.Row="1"
                             Background="transparent"
                             Items="{Binding Path=Announcements}"
                             SelectedItem="{Binding SelectedAnnouncement}">
                        <ListBox.Template>
                            <ControlTemplate>
                                <ItemsPresenter />
                            </ControlTemplate>
                        </ListBox.Template>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="200">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="350" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Border Margin="5,0,5,0"
                                            Background="#ebebe8"
                                            BorderBrush="black"
                                            BorderThickness="1"
                                            CornerRadius="15">
                                        <Image Margin="5"
                                               Source="{Binding ImagePath, Converter={StaticResource pathToBitmapConverter}}"
                                               Stretch="Uniform"
                                               ClipToBounds="True">
                                        </Image>
                                    </Border>
                                    <Border Grid.Column="1"
                                            BorderBrush="black"
                                            BorderThickness="1"
                                            CornerRadius="15"
                                            Margin="5,0,5,0"
                                            Background="#ebebe8">
                                        <StackPanel Margin="10">
                                            <Label Content="–ù–∞–∑–≤–∞–Ω–∏–µ —Ñ–∞–π–ª–∞" />
                                            <TextBox Text="{Binding Name}" />
                                            <Label Content="–ê–∫—Ç—É–∞–ª—å–Ω–æ —Å" />
                                            <TextBox Text="{Binding ActualStart}" />
                                            <Label Content="–ê–∫—Ç—É–∞–ª—å–Ω–æ –¥–æ" />
                                            <TextBox Text="{Binding ActualEnd}" />
