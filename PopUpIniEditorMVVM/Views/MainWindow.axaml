                                                    BorderBrush="black"
                                                    BorderThickness="1"
                                                    CornerRadius="15"
                                                    Height="200"
                                                    Margin="5,0,5,0"
                                                    Background="#ebebe8">
                                                <StackPanel Margin="10" IsVisible="{Binding IsModeTwo}">
                                                    <Label Content="Directory" />
                                                    <TextBox Text="{Binding DirectoryPath}" />
                                                    <Label Content="Rate" />
                                                    <TextBox Text="{Binding Rate}"
                                                             Width="70"
                                                             HorizontalAlignment="Left" />
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="2"
                          VerticalAlignment="Bottom"
                          Height="50">
                        <Button HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Width="120" Height="40"
                                Content="{Binding UpdateSettingsIniFileContent}"
                                Command="{Binding UpdateSettingsIniFileCommand}"
                                Background="Gray"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center">
                        </Button>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </TabItem>
        <TabItem>
            <TabItem.Header>launch</TabItem.Header>
            <Grid>
