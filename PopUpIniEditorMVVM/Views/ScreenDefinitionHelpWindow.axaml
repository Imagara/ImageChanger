<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PopUpIniEditorMVVM.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        d:DesignWidth="200" d:DesignHeight="100"
        Width="200" Height="100"
        WindowStartupLocation="Manual"
        x:Class="PopUpIniEditorMVVM.Views.ScreenDefinitionHelpWindow"
        Background="transparent"
        Title="ScreenDefinitionHelpWindow"
        WindowState="Normal"
        SystemDecorations="None">
        <Label FontSize="50"
               Content="{Binding ScreenNum,Mode=OneWay}"
               VerticalAlignment="Center"
               HorizontalAlignment="Center" >
        </Label>
</Window>
