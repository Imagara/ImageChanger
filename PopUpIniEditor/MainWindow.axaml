<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PopUpIniEditor.MainWindow"
        MinHeight="300"
        MinWidth="600"
        Title="IniCreatorWindow">
    <TabControl>
        <TabItem>
            <TabItem.Header>settings</TabItem.Header>
            <ScrollViewer Background="White"
                          VerticalScrollBarVisibility="Visible">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Border BorderBrush="Black"
                                BorderThickness="1"
                                Margin="10"
                                CornerRadius="15"
                                Background="#ebebe8">
                            <Image Source="Assets/ini.png"
                                   Margin="5" />
                        </Border>
                        <Border Grid.Column="1"
                                BorderBrush="black"
                                BorderThickness="1"
                                Margin="10"
                                CornerRadius="15"
                                Background="#ebebe8">
                            <StackPanel Margin="10">
                                <Label Content="Режим работы программы" />
                                <StackPanel Orientation="Horizontal">
                                    <ComboBox SelectedItem="1"
                                              SelectionChanged="ModeSelectComboBox_OnSelectionChanged">
                                        <Label Content="1" />
                                        <Label Content="2" />
                                    </ComboBox>
                                    <Label Name="ModeHintLabel"
                                           Content=""
                                           Foreground="darkgray" />
                                </StackPanel>
                                <StackPanel Name="FirstModeStackPanel" IsVisible="False">
                                    <Label Content="Директория с файлами" />
                                    <TextBox Name="SettingsDirectoryTextBox" />
                                </StackPanel>
                                <StackPanel Name="SecondModeStackPanel" IsVisible="False">
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Экран для вывода:" />
                                        <TextBox Width="30"/>
                                        <Button Content="+"
                                                Width="30"
                                                Height="30"
                                                HorizontalContentAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                Click="AddDisplayButton_OnClick">
                                            <ToolTip.Tip>
                                                <TextBlock>Добавляет экран</TextBlock>
                                            </ToolTip.Tip>
                                        </Button>
                                        <Button Content="⌫"
                                                Width="40"
                                                Height="30"
                                                HorizontalContentAlignment="Center"
                                                VerticalContentAlignment="Center">
                                            <ToolTip.Tip>
                                                <TextBlock>Удаляет выбранный экран из списка</TextBlock>
                                            </ToolTip.Tip>
                                        </Button>
                                    </StackPanel>
                                    <ListBox Background="transparent">
                                        12345671
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="black"
                                                        BorderThickness="1"
                                                        CornerRadius="15"
                                                        Height="30"
                                                        Width="30">
                                                    <Label Content="1"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center" />
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                    </ListBox>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="1">
                        <StackPanel>
                            <Label Content="Displays Settings"
                                   VerticalAlignment="Top"
                                   HorizontalAlignment="Center" />
                            <ListBox Background="transparent">
                                123456789
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="150" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Border Height="150"
                                                    Margin="5,0,5,0">
                                                <Grid>
                                                    <Image Margin="5"
                                                           Source="Assets/display-frame.png" />
                                                    <Label Content="1"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           FontSize="20" />
                                                </Grid>
                                            </Border>
                                            <Border Grid.Column="1"
                                                    BorderBrush="black"
                                                    BorderThickness="1"
                                                    CornerRadius="15"
                                                    Height="200"
                                                    Margin="5,0,5,0"
                                                    Background="#ebebe8">
                                                <StackPanel Margin="10">
                                                    <Label Content="Directory" />
                                                    <TextBox />
                                                    <Label Content="Rate" />
                                                    <TextBox Width="70"
                                                             HorizontalAlignment="Left" />
                                                    <Label Content="Extensions" />
                                                    <TextBox></TextBox>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="2"
                          VerticalAlignment="Bottom"
                          Height="50">
                        <Button HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Width="120" Height="40"
                                Content="Создать"
                                Background="Gray"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center">
                        </Button>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </TabItem>
        <TabItem>
            <TabItem.Header>launch</TabItem.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Выбрать ini файл" Click="ChooseIniFileButton_OnClick" />
                        <Label Content="Выбрано: " />
                        <Label Name="SelectedIniLabel" Content="" />
                    </StackPanel>
                    <ScrollViewer HorizontalScrollBarVisibility="Visible">
                        <ListBox>
                            123
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="black"
                                            BorderThickness="1"
                                            CornerRadius="15"
                                            Height="200"
                                            Width="340">
                                        <Image Source="{Binding Image}" />
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Выбрать файлы" Click="ChooseFilesButton_OnClick" />
                        <Label Content="Выбрано: " />
                        <Label Name="SelectedLabel" Content="" />
                    </StackPanel>
                </StackPanel>
                <Button Grid.Row="1"
                        Width="120"
                        Height="40"
                        Content="Сохранить"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Center"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center">
                </Button>
            </Grid>
        </TabItem>
    </TabControl>
</Window>